{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cc",
            "args": [
                "main.c",
                "libft/*.o",
                "-o",
                "${workspaceFolder}/so-long"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "gdb",
            "args": [
                "${workspaceFolder}/so-long"
            ],
            "dependsOn": "build",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
